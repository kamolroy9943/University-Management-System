    <fieldset style="width: 600px;margin: 50px auto">
        <legend style="font-size: xx-large">Save Department</legend>
        <form method="post" action=Save>
            <table style="margin: 50px auto">
                <tr>
                    <td ><labe>Code</labe></td>
                    <td ><input type="text" id="code" placeholder="Code" name="code" required></td>
                </tr>
                <tr>
